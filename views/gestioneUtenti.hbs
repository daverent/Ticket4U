<!DOCTYPE html>
<html lang="it">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <link rel="shortcut icon" href="/favicon.png" type="image/x-icon">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ticket4U | Gestione Utente</title>
</head>

<body style="min-width: 1000px; width:auto">
    <nav>
        <h4>Ticket4U</h4>
        <ul>
            {{#if logged}}
            <li><a href="/logout" id="LogBtn" class="btn btn-primary">Logout</a></li>
            {{/if}}
        </ul>
    </nav>

    <div class="container mt-4" style="width: 50%;">
        {{#each users}}
        <div class="card" style="height:auto;">
            <div class="card-body">
                <div class="inserisciev">
                    <div class="mb-3" style="width: 40%; margin-right: 30%;">
                        <ul>
                            <h7 class="card-title" style="color: rgb(0, 0, 0); font-weight:bold">{{this.email}}</h7><br>
                            <h7 class="card-title" style="color: rgb(0, 0, 0)">{{this.username}}</h7><br>
                            <h7 class="card-title" style="color: rgb(0, 0, 0)">{{this.surname}}</h7><br>
                            <h7 class="card-title" style="color: rgb(0, 0, 0)">Ruolo: {{this.role}}</h7><br>
                        </ul>
                    </div>
                    <div>
                        <form action="/auth/cambiaRuolo" method="post">
                            <input type="hidden" name="role" id="1" value="1" class="form-control">
                            <button type="submit" class="btn btn-primary btn-md" style="margin-top: 5px; width:100%"
                                name="email" value="{{this.email}}">Rendi Manager</button>
                        </form>
                        <form action="/auth/cambiaRuolo" method="post">
                            <input type="hidden" name="role" id="2" value="2" class="form-control">
                            <button type="submit" class="btn btn-primary btn-md" style="margin-top: 5px;" name="email"
                                value="{{this.email}}">Rendi Biglietteria</button>
                        </form>
                        <form action="/auth/cambiaRuolo" method="post">
                            <input type="hidden" name="role" id="0" value="0" class="form-control">
                            <button type="submit" class="btn btn-primary btn-md" style="margin-top: 5px;" name="email"
                                value="{{this.email}}">Rimuovi Privilegi</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

</body>

</html>